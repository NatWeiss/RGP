<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <RelativeLayout
            android:layout_height="80dip"
            android:layout_width="fill_parent"
            android:padding="5dip"
            android:background="@drawable/list_title_back"
            android:shadowRadius="2">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="false"
                android:gravity="left"
                android:text="SOOMLA Test Store"
                android:layout_marginLeft="5dip"
                android:textSize="15dip"
                android:textColor="#bc1000"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/title"
                android:text="SOOMLA Test Store"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="20dip"
                android:gravity="center"
                android:textSize="30dip"
                android:textColor="@color/black"/>
        <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="10"
                android:paddingTop="7dip"
                android:layout_marginRight="5dip"
                android:textSize="15dip"
                android:textColor="#10c9FF"
                android:textStyle="bold"/>
        <ImageView android:src="@drawable/muffin"
                android:layout_height="30dip"
                android:layout_width="30dip"
                android:gravity="right"
                android:layout_toLeftOf="@id/balance"
                android:contentDescription="balance image"/>
    </RelativeLayout>

    <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:listSelector="@drawable/list_selector"
            android:divider="@color/lightGray"
            android:dividerHeight="2sp"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"/>

    <LinearLayout
            android:id="@+id/getMore"
            style="@android:style/ButtonBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

        <ImageView
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:src="@drawable/get_more" android:clickable="true"
                android:onClick="wantsToBuyPacks"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restore Previous Transactions"
                android:id="@+id/button" android:layout_gravity="center" android:onClick="restoreTransactions"/>

    </LinearLayout>

</LinearLayout>