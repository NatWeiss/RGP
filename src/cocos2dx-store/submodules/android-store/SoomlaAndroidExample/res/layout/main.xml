<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/img_direct"
        >
    <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/title"
            android:layout_marginTop="50sp"
            android:textSize="50sp"
            />

    <TextView android:id="@+id/ygh_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:gravity="center"
             android:text="@string/your_gamehere"
             android:textSize="30sp"
             />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/botdrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:columnWidth="200dp"
                android:rowCount="1"
                android:gravity="center"
                android:layout_marginTop="100sp"
                android:layout_below="@id/ygh_text">
        <LinearLayout
                android:id="@+id/leftbox"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="80sp" >

            <ImageView
                    android:id="@+id/drag_img"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:contentDescription="@string/drag_text"
                    android:src="@drawable/soomla_logo_new" />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/rightbox"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="50sp"
                android:background="@drawable/shape" >

        </LinearLayout>
    </LinearLayout>


    <TextView
            android:id="@+id/main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/botdrag"
            android:layout_centerHorizontal="true"
            android:text="@string/drag_text"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            />


</RelativeLayout>

